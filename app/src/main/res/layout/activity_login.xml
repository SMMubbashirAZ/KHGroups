<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/Layout"

    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:src="@drawable/main_bg" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/tableLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:gravity="center_horizontal"


            android:orientation="vertical">


            <!--        <TableRow
                        android:id="@+id/tableRow1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp" >
             -->

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <DigitalClock
                    android:id="@+id/DigitalClock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:gravity="center_horizontal"
                    android:text="DigitalClock"
                    android:textColor="@android:color/white"
                    android:textSize="40dp" />

            </LinearLayout>
            <!--         <TableRow
                        android:id="@+id/tableRow5"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp" >
             -->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:gravity="center_horizontal"
                    android:padding="20dp"
                    android:src="@drawable/login_logo" />

                <!-- </TableRow> -->
            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="15dp"
                android:theme="@style/Theme.AppCompat"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:weightSum="1">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    >

                    <!--  <android.support.design.widget.TextInputLayout

                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:theme="@style/Theme.AppCompat"
                          android:textColorHint="@color/black"
                          android:background="@drawable/edittxt_bg"
                          app:hintEnabled="false"

                          app:passwordToggleTint="@color/black">-->
                    <EditText
                        android:id="@+id/UNameTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittxt_bg"
                        android:gravity="left"
                        android:hint="User Name"
                        android:inputType="text"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        android:theme="@style/Theme.AppCompat" />
                </TableRow>


            </LinearLayout>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:padding="15dp"
                android:theme="@style/Theme.AppCompat"
                android:weightSum="1">

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                     >
                    <!--    <android.support.design.widget.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:descendantFocusability="blocksDescendants"
                            android:theme="@style/Theme.AppCompat"
                            android:textColorHint="@color/black"
                            android:background="@drawable/edittxt_bg"
                            app:hintEnabled="false"
                            app:passwordToggleEnabled="true"
                            app:passwordToggleTint="@color/black">-->
                    <EditText
                        android:id="@+id/PassTxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/edittxt_bg"
                        android:descendantFocusability="blocksDescendants"
                        android:gravity="left"
                        android:hint="Password"
                        android:inputType="textPassword"
                        android:padding="15dp"
                        android:textColor="@color/black"
                        android:textColorHint="@color/black"
                        android:textSize="15sp"
                        android:theme="@style/Theme.AppCompat" />
                    <ImageButton
                        android:id="@+id/showPass"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="-40dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/eye_show"
                         />
                </TableRow>


            </LinearLayout>


            <!--         <TableRow
                        android:id="@+id/tableRow3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="20dp" >
                 -->

            <!--
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center"
                            android:gravity="center_horizontal"
                                    android:id="@+id/login">
            -->

            <Button
                android:id="@+id/LoginBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/button_gradient"
                android:padding="15dp"
                android:text="LOGIN"
                android:textColor="#415259"

                android:textSize="15sp" />


            <Button
                android:id="@+id/ImeiBtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_gradient"
                android:padding="15dp"
                android:text="SHOW IMEI"
                android:textColor="#415259"
                android:textSize="15sp" />

            <Button
                android:id="@+id/clearData"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/button_gradient"
                android:padding="15dp"
                android:text="Go To App Settings"
                android:textColor="#415259"
                android:textSize="15sp" />


            <!--
                                </LinearLayout>
            -->

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_below="@+id/login"
                android:layout_gravity="center"
                android:gravity="center_horizontal"
                android:orientation="horizontal">


                <!--
                        <Button
                                android:id="@+id/ForgetPassLogin"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Forget Password"
                                android:textColor="@android:color/white"
                                android:textStyle="bold"
                                android:textSize="15sp"
                                android:background="@android:color/transparent"

                                />
                -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal">


                    <Button
                        android:id="@+id/RegBtn"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:background="@android:color/transparent"
                        android:text="Create\nAccount"

                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:visibility="gone" />

                    <Button
                        android:id="@+id/ForgetPassLogin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.50"
                        android:background="@android:color/transparent"
                        android:text="Forget\nPassword"

                        android:textColor="@android:color/white"
                        android:textSize="15sp"
                        android:visibility="gone" />


                </TableRow>


            </LinearLayout>





        </LinearLayout>

</ScrollView>

    </RelativeLayout>