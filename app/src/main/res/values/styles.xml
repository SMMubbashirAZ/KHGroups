<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->

    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="DateDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>
    <style name="DatePickerDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimaryDark</item>
    </style>
    <!-- Application theme. -->

    <style name="SearchbarStyle" parent="android:Widget.TextView">
        <item name="android:drawablePadding">15dp</item>
        <item name="android:textColorHint">#9F9F9F</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableEnd">@drawable/ic_twotone_search_24</item>
        <item name="android:background">@drawable/edit_text_focus</item>
    </style>
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->

        <item name="android:editTextStyle">@style/App_EditTextStyle</item>


        <item name="android:buttonStyle">@style/App_ButtonStyle</item>
        <item name="android:textViewStyle">@style/App_TextView</item>
        <!--<item name="android:spinnerStyle">@style/App_SpinnerStyle</item>-->

        <item name="android:spinnerStyle">@style/spinnerStyle</item>

    </style>

    <style name="spinnerStyle" parent="android:style/Widget.Spinner">
        <item name="android:clickable">true</item>
    </style>

    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edittxt_bg</item>
        <item name="android:textSize">15sp</item>

    </style>


    <style name="App_ButtonStyle" parent="@android:style/Widget.Button">

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@drawable/chkin_button_gradient</item>


    </style>

    <style name="App_SpinnerStyle" parent="@android:style/Widget.Spinner">

        <item name="android:textSize">15sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:background">@android:drawable/btn_dropdown</item>


    </style>

    <style name="EditText_Warning">
        <item name="android:background">@drawable/edittext_warn</item>

    </style>

    <style name="App_TextView">
        <item name="android:textSize">15sp</item>

    </style>


    <style name="MyListBackContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!--<item name="android:background">@drawable/background_back</item>-->
        <item name="android:background">@android:color/white</item>
        <item name="android:gravity">right</item>
    </style>

    <style name="MyListFrontContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <!--<item name="android:background">@drawable/background_front</item>-->
        <item name="android:background">@android:color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="MyListButtonAction">
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">30dp</item>


    </style>

    <style name="MyListImage">
        <item name="android:layout_width">64dp</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:scaleGravity">fill</item>
        <item name="android:layout_marginRight">8dp</item>

    </style>

    <style name="MyListTitle">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:maxLines">5</item>
        <item name="android:ellipsize">end</item>
    </style>




</resources>
